-- examine the three tables
SELECT * FROM trips;
SELECT * FROM riders;
SELECT * FROM cars;

-- simple cross join between riders and cars
SELECT riders.first,
        riders.last,
        cars.model
FROM riders, cars;

-- join between trips and riders
SELECT *
FROM trips
LEFT JOIN riders
  ON trips.rider_id = riders.id;

-- combine the trips and cars table using an INNER JOIN
SELECT *
FROM trips
INNER JOIN cars
  ON trips.car_id = cars.id;

-- Stack the riders table on top of the new table named riders2
SELECT *
FROM riders
UNION
SELECT *
FROM riders2;

-- the average cost for a trip
SELECT AVG(cost)
FROM trips;

-- the riders who have used Lyft less than 500 times
SELECT *
FROM riders
WHERE total_trips < 500;

-- calculate the number of cars that are active
SELECT COUNT(*)
FROM cars
WHERE status = "active";

-- two cars that have the highest trips_completed
SELECT *
FROM cars
ORDER BY trips_completed DESC
LIMIT 2;